---
interface Props {
    title: string
    desc: string
    type: "feature" | "document" 
    href?: `${string}`
}

const {
    title,
    desc,
    type,
    href
} = Astro.props
---
{type === "feature" ?
    <div class="card">
        <div class="content">
            <h3>
                {title}
            </h3>
            <p>
                {desc}
            </p>
        </div>
    </div>
    :
    <a href={`${href}`} class="card">
        <div class="content">
            <h3>
                {title}
            </h3>
            <p>
                {desc || "No description avalible for this document"}
            </p>
        </div>
    </a>
}